{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
	},
	"compileOnSave": true,
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}